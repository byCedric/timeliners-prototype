{
	"extends": [
		"tslint:recommended",
		"tslint-config-prettier",
		"tslint-react"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts"
		]
	},
	"rules": {
		"indent": [true, "tabs"],
		"no-unused-expression": false,
		"ordered-imports": false,
		"jsx-boolean-value": false,
		"member-ordering": false,
		"no-console": false,
		"jsx-no-multiline-js": false
	}
}
